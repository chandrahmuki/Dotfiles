#!/bin/sh
# distrobox_binary
# name: archbox
if [ -z "${CONTAINER_ID}" ]; then
	exec "/usr/bin/distrobox-enter"  -n archbox  --  '/usr/bin/zellij'  "$@"
elif [ -n "${CONTAINER_ID}" ] && [ "${CONTAINER_ID}" != "archbox" ]; then
	exec distrobox-host-exec '/home/david/.local/bin/zellij' "$@"
else
	exec '/usr/bin/zellij' "$@"
fi
